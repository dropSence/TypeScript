{
    "include": ["./src/**/*"],
    "compilerOptions": {
        "target": "ES6", // 编译的js版本
        "module": "ES6",  // 使用的模块化版本
        "outDir": "./dist",  // 编译后的文件出口
        "noEmitOnError": true, // 有错误时不生成编译文件
        "noImplicitAny": true, // 不允许使用any类型
        "noImplicitThis": true // 不允许使用不明确类型的this
    }
}